{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": ["trained_model.pth", "requirements.txt"],
        "runtime": "python3.9",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "app/main.py"
    },
    {
      "src": "/predict",
      "dest": "app/main.py"
    },
    {
      "src": "/health",
      "dest": "app/main.py"
    }
  ]
}
