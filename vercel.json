{
  "version": 2,
  "builds": [
    {
      "src": "app/main.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "installCommand": "pip install --upgrade pip && pip install torch==2.6.0+cpu -f https://download.pytorch.org/whl/torch_stable.html && pip install -r requirements.txt",
        "includeFiles": ["trained_model.pth", "requirements.txt"],
        "maxLambdaSize": "50mb",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "app/main.py"
    },
    {
      "src": "/predict",
      "dest": "app/main.py"
    },
    {
      "src": "/health",
      "dest": "app/main.py"
    }
  ]
}
